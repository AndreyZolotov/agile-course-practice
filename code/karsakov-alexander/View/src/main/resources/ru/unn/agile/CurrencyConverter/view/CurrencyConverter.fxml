      <Label fx:id="resultCurrencyLabel" text="${viewModel.resultCurrency}" layoutX="471.0" layoutY="135.0" prefHeight="27.0" prefWidth="45.0" />
      <Label id="statusLabel" layoutX="25.0" layoutY="176.0" text="Status:" />
      <Label fx:id="statusLabelText" text="${viewModel.status}" layoutX="87.0" layoutY="176.0" />
   </children>
</AnchorPane>
