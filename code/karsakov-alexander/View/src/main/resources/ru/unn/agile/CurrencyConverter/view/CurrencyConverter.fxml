      <ComboBox fx:id="toCurrencyComboBox" items="${viewModel.toCurrencyList}" layoutX="337.0" layoutY="25.0" prefHeight="39.0" prefWidth="179.0" />
      <Label id="toLabel" layoutX="303.0" layoutY="31.0" text="To:" />
