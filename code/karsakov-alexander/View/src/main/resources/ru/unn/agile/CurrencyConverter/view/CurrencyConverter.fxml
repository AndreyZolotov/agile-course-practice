<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ru.unn.agile.CurrencyConverter.viewmodel.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.unn.agile.CurrencyConverter.view.CurrencyConverter" prefHeight="216.0" prefWidth="540.0">
   <fx:define>
        <ViewModel fx:id="viewModel" />
   </fx:define>
   <children>
      <Label id="fromLabel" text="From:" layoutX="25.0" layoutY="31.0"/>
      <ComboBox fx:id="fromCurrencyComboBox" items="${viewModel.fromCurrencyList}" layoutX="79.0" layoutY="25.0" prefHeight="39.0" prefWidth="179.0" />
      <Label id="valueLabel" layoutX="25.0" layoutY="83.0" prefHeight="27.0" prefWidth="54.0" text="Value:" />
      <TextField fx:id="valueTextField" layoutX="79.0" layoutY="77.0" prefHeight="39.0" prefWidth="179.0" />
